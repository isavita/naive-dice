<section> 
  <h1>New user</h1>
  <%= form_for @changeset, Routes.user_path(@conn, :create), fn f -> %>
    <div class="form-group">
      <%= text_input f, :email, placeholder: "Email",
                                class: "form-  control" %>
    </div>
    <div class="form-group">
      <%= password_input f, :password, placeholder: "Password",
                                      class: "form-control" %>
    </div>
    <%= submit "Create", class: "btn btn-primary" %>
  <% end %>
</section>
